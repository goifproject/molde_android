<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="52dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/img_cardnews_viewPager_child"
        android:layout_width="match_parent"
        android:layout_height="421dp" />

    <ScrollView
        android:id="@+id/cardnews_description_wrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="100dp"
        android:layout_below="@+id/img_cardnews_viewPager_child"
        android:background="#3a3e39">

        <TextView
            android:id="@+id/txt_cardnews_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="28dp"
            android:layout_marginRight="28dp"
            android:layout_marginBottom="20dp"
            android:text="카드뉴스 설명, 텍스트가 길어지면 스크롤됩니다.카드뉴스 설명, 텍스트가 길어지면 스크롤됩니다."
            android:textColor="@color/colorWhite"/>

    </ScrollView>
</RelativeLayout>
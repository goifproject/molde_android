<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_activity_comment_wrapper"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f6f6f6"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/comment_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        app:layoutManager="LinearLayoutManager" />


    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#f6f6f6"
        android:layout_above="@+id/edittext_comment"
        android:id="@+id/view" />
    <EditText
        android:id="@+id/edittext_comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:maxHeight="96dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:paddingStart="16dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:paddingEnd="76dp"
        android:background="@color/colorWhite"
        android:hint="댓글을 입력하세요."
        android:textSize="14sp" />

    <Button
        android:id="@+id/btn_comment_post"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/edittext_comment"
        android:layout_alignEnd="@+id/edittext_comment"
        android:layout_alignTop="@+id/edittext_comment"
        android:background="#fff176"
        android:text="게시" />



</RelativeLayout>